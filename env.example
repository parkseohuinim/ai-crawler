# AI Crawler 환경 설정
# 이 파일을 .env로 복사하여 실제 값들을 입력하세요

# OpenAI API 키 (MCP 도구 분석용)
OPENAI_API_KEY=your_openai_api_key_here

# Firecrawl API 키 (선택사항 - 없으면 기본 크롤러 사용)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Anthropic API 키 (선택사항 - MCP용)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# 서버 설정
HOST=0.0.0.0
PORT=8000
DEBUG=true

# 로깅 레벨
LOG_LEVEL=INFO

# 결과 저장 디렉토리
RESULTS_DIR=results

# 캐시 디렉토리
CACHE_DIR=cache

# 최대 동시 크롤링 수
MAX_CONCURRENT_CRAWLS=10

# 기본 타임아웃 (초)
DEFAULT_TIMEOUT=30 